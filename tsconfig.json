{
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "nodenext",
    "module": "NodeNext",

    "removeComments": true,
    "preserveValueImports": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "sourceMap": true,

    "typeRoots" : ["./src/types", "./node_modules/@types"]
  },

  "ts-node": {
    "files": true
  },

  "files": [
    "src/index.ts",
    "src/types/adoptium.d.ts",
    "src/types/essentialsx.d.ts",
    "src/types/modrinth.d.ts",
    "src/types/server.d.ts",
    "src/types/spigot.d.ts"
  ],

  "include": [
    "src/**/*"
  ]
}