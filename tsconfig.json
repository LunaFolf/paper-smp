{
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "nodenext",
    "module": "NodeNext",

    "removeComments": true,
    "preserveValueImports": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "sourceMap": true
  }
}